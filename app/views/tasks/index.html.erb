<h1>Your current tasks are:</h1>
<p><%= link_to "+ Add another task", tasks_new_path %></p>
<ul>
  <% @tasks.each do |task| %>
    <li> <%= task.completed ? '✅' : '0️⃣' %> <%= link_to task.title, task_path(task) %> <%= link_to "Delete task", delete_task_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></li>
  <% end %>
</ul>

